def uncommon_characters(str1, str2):
    set1 = set(str1)
    set2 = set(str2)

    uncommon_chars = (set1 - set2) | (set2 - set1)

    result = ''.join(uncommon_chars)

    return result

# Example usage
string1 = "hello"
string2 = "world"
concatenated_result = uncommon_characters(string1, string2)
print(f"Uncommon characters between '{string1}' and '{string2}': {concatenated_result}")
