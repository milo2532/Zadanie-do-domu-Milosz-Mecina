def capitalize_first_and_last_letters(string):
    words = string.split()

    modified_words = []
    for word in words:
        if len(word) > 1:
            modified_word = word[0].upper() + word[1:-1] + word[-1].upper()
        else:
            modified_word = word.upper()
        modified_words.append(modified_word)

    modified_string = ' '.join(modified_words)

    return modified_string

# Example usage
input_string = "hello world! this is a test."
modified_result = capitalize_first_and_last_letters(input_string)
print(f"Original string: {input_string}")
print(f"Modified string: {modified_result}")
